<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%=f.input :article_id,as: :hidden,input_html:{value:@article.id,class:'some-class'}%>
    <%= f.input :comment,as: :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
